{
  "compilerOptions": {
    "strictNullChecks": true,
    "declaration": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "lib": ["es2017", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "jsx": "react",
    "paths": {
      "@/*": ["./app/javascript/*"],
    }
  },
  "include": ["./app/javascript/**/*"],
  "exclude": [
    "node_modules",
    "vendor",
    "public"
  ],
  "compileOnSave": false
}
